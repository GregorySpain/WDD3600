<%- include('../includes/head.ejs') %> <!-- ejs function renders the head section -->
</head>
<body>
    <%- include('../includes/navigation.ejs') %> <!-- ejs function renders the header and nav section -->
    <main>
        <% if (orders.length <= 0) { %>
        <h1>Nothing There!</h1>
        <% } else { %>
            <ul>
                <% orders.forEach(order => { %>                
                <li>
                    <h1># <%= order.id %></h1>
                    <ul>
                        <% order.products.forEach(product => { %>

                        
                        <li> <%= product.title %> (<%= product.orderItem.quantity %>) </li>
                        <% }); %>
                    </ul>
                </li>
                <% }); %>
            </ul>
        <% } %>
    </main>
<%- include('../includes/end.ejs') %>