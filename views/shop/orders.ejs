<%- include('../includes/head.ejs') %> <!-- ejs function renders the head section -->
<link rel="stylesheet" href="/css/orders.css">
</head>
<body>
    <%- include('../includes/navigation.ejs') %> <!-- ejs function renders the header and nav section -->
    <main>
        <% if (orders.length <= 0) { %>
        <h1>Nothing There!</h1>
        <% } else { %>
            <ul class="orders">
                <% orders.forEach(order => { %>                
                <li class="orders__item">
                    <h1>Order- # <%= order._id %></h1>
                    <ul class="orders__products">
                        <% order.products.forEach(p => { %>
                        <li class="orders__products-item"> <%= p.product.title %> (<%= p.quantity %>) </li>
                        <% }); %>
                    </ul>
                </li>
                <% }); %>
            </ul>
        <% } %>
    </main>
<%- include('../includes/end.ejs') %>